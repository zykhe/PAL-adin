# PAL-adin Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=PAL-adin
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://paladin:your_secure_password@localhost:5432/paladin
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paladin
DB_USER=paladin
DB_PASSWORD=your_secure_password

# Redis/KeyDB
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_BUCKET=paladin-storage

# AI Model APIs (Optional - for hybrid mode)
# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# GLM-4
GLM_API_KEY=

# Local AI (Ollama)
OLLAMA_URL=http://localhost:11434
LOCAL_AI_ONLY=false

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=your_encryption_key_32_bytes_min
SECRET_KEY=your_secret_key_for_sessions

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=your_grafana_password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@paladin.ai

# Feature Flags
ENABLE_VOICE_INTERFACE=false
ENABLE_MULTI_MODAL=false
ENABLE_COST_OPTIMIZATION=true
ENABLE_PRIVACY_FILTERS=true

# Development
HOT_RELOAD=true
DEBUG_MODE=true
